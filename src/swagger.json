  "/admin/product": {
  "post": {
    "tags": ["Admin"],
    "summary": "Create Product",
    "parameters": [
      {
        "in": "header",
        "name": "Authorization",
        "description": "Bearer <your-token>",
        "required": true,
        "type": "string"
      },
      {
        "in": "body",
        "name": "product",
        "description": "Product details",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "productName": {
              "type": "string",
              "description": "Name of the product"
            },
            "productImages": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of product image URLs"
            },
            "stock": {
              "type": "integer",
              "description": "Quantity of product in stock"
            },
            "price": {
              "type": "number",
              "description": "Price per product"
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Product successfully created.",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "data": {
              "type": "object"
            }
          }
        }
      },
      "400": {
        "description": "Oops! Something went wrong. Please try again.",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "put": {
    "tags": ["Admin"],
    "summary": "Update Product",
    "parameters": [
      {
        "in": "header",
        "name": "Authorization",
        "description": "Bearer <your-token>",
        "required": true,
        "type": "string"
      },
      {
        "in": "body",
        "name": "product",
        "description": "Updated product details",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "productId": {
              "type": "string",
              "description": "_id of product"
            },
            "productName": {
              "type": "string",
              "description": "Updated product name"
            },
            "productImages": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Updated list of product image URLs"
            },
            "stock": {
              "type": "integer",
              "description": "Updated stock count"
            },
            "price": {
              "type": "number",
              "description": "Updated price per product"
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Product updated successfully.",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "data": {
              "type": "object"
            }
